<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Tabavoco.Views.MediaControlsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel Orientation="Horizontal">
        <Button x:Name="PreviousButton"
                Content="⏮"
                Background="Transparent" 
                BorderThickness="0"
                FontSize="14" 
                Foreground="White"
                VerticalAlignment="Center"
                Margin="2,0,0,0"
                Padding="2,2"
                Width="22"
                Click="OnPreviousButtonClicked"
                ToolTipService.ToolTip="Previous Track"/>
        <Button x:Name="PlayPauseButton"
                Content="▶"
                Background="Transparent" 
                BorderThickness="0"
                FontSize="14" 
                Foreground="White"
                VerticalAlignment="Center"
                Margin="2,0,0,0"
                Padding="2,2"
                Width="22"
                Click="OnPlayPauseButtonClicked"
                ToolTipService.ToolTip="Play/Pause"/>
        <Button x:Name="NextButton"
                Content="⏭"
                Background="Transparent" 
                BorderThickness="0"
                FontSize="14" 
                Foreground="White"
                VerticalAlignment="Center"
                Margin="2,0,0,0"
                Padding="2,2"
                Width="22"
                Click="OnNextButtonClicked"
                ToolTipService.ToolTip="Next Track"/>
    </StackPanel>
</UserControl>